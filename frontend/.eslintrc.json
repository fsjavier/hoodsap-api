{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "modules": true
        }
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "react/prop-types": [0, {
            "ignore": ["children"]
        }],
        "no-unused-vars": ["warn", {
            "argsIgnorePattern": "req|res|next|__"
        }],
        "react/no-unescaped-entities": ["error", {
            "forbid": [">", "}"]
        }],
        "react/no-children-prop": [
            0,
            {
                "allowFunctions": true
            }
        ]
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}